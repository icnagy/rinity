<h1>Listing cars</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Seats</th>
    <th>User</th>
    <th>Trip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.description %></td>
        <td><%= car.seats %></td>
        <td><%= car.user_id %></td>
        <td><%= car.trip_id %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

