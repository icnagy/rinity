<h1>Listing trips</h1>

<table>
  <tr>
    <th>Start address</th>
    <th>Destination address</th>
    <th>Trip date</th>
    <th>Is recurring</th>
    <th>Available seats</th>
    <th>Price</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.start_address %></td>
        <td><%= trip.destination_address %></td>
        <td><%= trip.trip_date %></td>
        <td><%= trip.is_recurring %></td>
        <td><%= trip.avalable_seats %></td>
        <td><%= trip.price %></td>
        <td><%= trip.user_id %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

